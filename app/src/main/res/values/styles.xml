<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.LightUpTheNews.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.LightUpTheNews.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.LightUpTheNews.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textInputOutlineColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.LightUpTheNews.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.LightUpTheNews.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/shr_next_button_state_list_anim
        </item>
    </style>

</resources>